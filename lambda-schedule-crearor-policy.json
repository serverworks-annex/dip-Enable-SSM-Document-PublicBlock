{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ManageDailyDocblockSchedulesInDefaultGroup",
            "Effect": "Allow",
            "Action": [
                "scheduler:CreateSchedule",
                "scheduler:UpdateSchedule"
            ],
            "Resource": "arn:aws:scheduler:us-east-1:786074732576:schedule/default/daily-ssm-docblock-*"
        },
        {
            "Action": [
                "SNS:Publish"
            ],
            "Resource": "arn:aws:sns:ap-northeast-1:073659750679:ssm-enable-publicblock-topic",
            "Effect": "Allow"
        },
        {
            "Sid": "PassSchedulerInvokeRole",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": "arn:aws:iam::AccountID:role/schedule-creator-role"
        }
    ]
}
